      {
        "name": "Fey Ancestry",
        "text": "[name] has advantage on saving throws against being charmed, and magic can't put [name] to sleep."
      },
      {
        "name": "Innate Spellcasting",
        "text": "[name]'s innate spellcasting ability is Wisdom (spell save DC SDC[WIS]). [name] can innately cast the following spells, requiring no material components:\n\nAt will: *dancing lights*\n1/day each: *darkness*, *faerie fire*"
      },
      {
        "name": "Spider Climb",
        "text": "[name] can climb difficult surfaces, including upside down on ceilings, without needing to make an ability check."
      },
      {
        "name": "Sunlight Sensitivity",
        "text": "While in sunlight, [name] has disadvantage on attack rolls, as well as on Wisdom (Perception) checks that rely on sight."
      },
      {
        "name": "Web Walker",
        "text": "[name] ignores movement restrictions caused by webbing."
      }
    ]
  },
  "actions": {
    "blocks": [
      {
        "name": "Multiattack",
        "text": "[name] makes three attacks, either with its longsword or its longbow. It can replace one of those attacks with a bite attack."
      },
      {
        "name": "Bite",
        "text": "*Melee Weapon Attack:* ATK[STR] to hit, reach 5 ft., one creature. *Hit:* DMG[1d4] piercing damage plus DMG[2d8] poison damage."
      },
      {
        "name": "Longsword",
        "text": "*Melee Weapon Attack:* ATK[STR] to hit, reach 5 ft., one target. *Hit:* DMG[1d8 + STR] slashing damage, or DMG[1d10 + STR] slashing damage if used with two hands."
      },
      {
        "name": "Longbow",
        "text": "*Ranged Weapon Attack:* ATK[DEX] to hit, range 150/600 ft., one target. *Hit:* DMG[1d8 + DEX] piercing damage plus DMG[1d8] poison damage."
      }
    ]
