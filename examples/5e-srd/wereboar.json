  "specialTraits": {
    "blocks": [
      {
        "name": "Shapechanger",
        "text": "[name] can use its action to polymorph into a boar-humanoid hybrid or into a boar, or back into its true form, which is humanoid. Its statistics, other than its AC, are the same in each form. Any equipment it is wearing or carrying isn't transformed. It reverts to its true form if it dies."
      },
      {
        "name": "Charge (Boar or Hybrid Form Only)",
        "text": "If [name] moves at least 15 feet straight toward a target and then hits it with its tusks on the same turn, the target takes an extra DMG[2d6] slashing damage. If the target is a creature, it must succeed on a DC 13 Strength saving throw or be knocked prone."
      },
      {
        "name": "Relentless (Recharges after a Short or Long Rest)",
        "text": "If [name] takes 14 damage or less that would reduce it to 0 hit points, it is reduced to 1 hit point instead."
      }
    ]
  },
  "actions": {
    "blocks": [
      {
        "name": "Multiattack (Humanoid or Hybrid Form Only)",
        "text": "[name] makes two attacks, only one of which can be with its tusks."
      },
      {
        "name": "Maul (Humanoid or Hybrid Form Only)",
        "text": "*Melee Weapon Attack:* ATK[STR] to hit, reach 5 ft., one target. *Hit:* DMG[2d6 + STR] bludgeoning damage."
      },
      {
        "name": "Tusks (Boar or Hybrid Form Only)",
        "text": "*Melee Weapon Attack:* ATK[STR] to hit, reach 5 ft., one target. *Hit:* DMG[2d6 + STR] slashing damage. If the target is a humanoid, it must succeed on a DC 12 Constitution saving throw or be cursed with wereboar lycanthropy."
      }
    ]
  },
